{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Duso",
  "scopeName": "source.duso",
  "fileTypes": ["du"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#multiline-strings"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#structures"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.duso",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.begin.duso"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.end.duso"
            }
          },
          "patterns": [
            {
              "name": "comment.block.duso",
              "begin": "/\\*",
              "beginCaptures": {
                "0": {
                  "name": "punctuation.definition.comment.begin.duso"
                }
              },
              "end": "\\*/",
              "endCaptures": {
                "0": {
                  "name": "punctuation.definition.comment.end.duso"
                }
              }
            }
          ]
        },
        {
          "name": "comment.line.duso",
          "match": "//.*?$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.duso",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.duso",
              "match": "\\\\([\\\\\"'ntr{}])"
            },
            {
              "include": "#template-expression"
            }
          ]
        },
        {
          "name": "string.quoted.single.duso",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.duso",
              "match": "\\\\([\\\\\"'ntr{}])"
            },
            {
              "include": "#template-expression"
            }
          ]
        }
      ]
    },
    "multiline-strings": {
      "patterns": [
        {
          "begin": "\"\"\"",
          "beginCaptures": {
            "0": {
              "name": "punctuation.bracket.multiline.begin.duso"
            }
          },
          "end": "\"\"\"",
          "endCaptures": {
            "0": {
              "name": "punctuation.bracket.multiline.end.duso"
            }
          },
          "contentName": "string.quoted.double.duso",
          "applyEndPatternLast": true,
          "patterns": [
            {
              "include": "#template-expression"
            }
          ]
        },
        {
          "begin": "'''",
          "beginCaptures": {
            "0": {
              "name": "punctuation.bracket.multiline.begin.duso"
            }
          },
          "end": "'''",
          "endCaptures": {
            "0": {
              "name": "punctuation.bracket.multiline.end.duso"
            }
          },
          "contentName": "string.quoted.single.duso",
          "applyEndPatternLast": true,
          "patterns": [
            {
              "include": "#template-expression"
            }
          ]
        }
      ]
    },
    "template-expression": {
      "patterns": [
        {
          "name": "meta.template.duso",
          "begin": "{{",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.template.begin.duso"
            }
          },
          "end": "}}",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.template.end.duso"
            }
          },
          "patterns": [
            {
              "include": "#operators"
            },
            {
              "include": "#numbers"
            },
            {
              "include": "#identifiers"
            },
            {
              "include": "#punctuation"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.duso",
          "match": "\\b(if|then|elseif|else|end|while|do|for|in|function|return|break|continue|try|catch|var)\\b"
        },
        {
          "name": "keyword.operator.duso",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "structures": {
      "patterns": [
        {
          "name": "entity.name.function.duso",
          "match": "\\b([A-Z][A-Za-z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.duso",
          "match": "\\b(function)\\s+([a-z_][a-z0-9_]*)\\b",
          "captures": {
            "1": {
              "name": "keyword.control.duso"
            },
            "2": {
              "name": "entity.name.function.duso"
            }
          }
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.duso.TEST_CONSTANT",
          "match": "\\b(true|false|nil)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.duso",
          "match": "\\b([0-9]+(\\.[0-9]+)?)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.duso",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.duso",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.duso",
          "match": "="
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.duso",
          "match": "[{}\\[\\]().,;]"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.duso",
          "match": "\\b[a-z_][a-z0-9_]*\\b"
        }
      ]
    }
  }
}

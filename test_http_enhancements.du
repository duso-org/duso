// Test script for HTTP server enhancements
// Tests: path parameters, form data, response helpers

server = http_server({port = 9999})

// Route 1: Path parameters
server.route("GET", "/users/:id", "test_handlers/user.du")

// Route 2: Form data
server.route("POST", "/contact", "test_handlers/contact.du")

// Route 3: Response helpers
server.route("GET", "/api/data", "test_handlers/api_data.du")

// Debug route
server.route("POST", "/debug", "test_handlers/debug.du")

print("Test server starting on http://localhost:9999")
print("Try:")
print("  GET /users/123")
print("  POST /contact (with form data)")
print("  GET /api/data")
print("  POST /debug (to see request data)")

server.start()

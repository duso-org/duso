/*
  handlers/hello.du -- JSON greeting endpoint
*/

ctx = context()
req = ctx.request()
res = ctx.response()

// Get query parameter
name = "World"
if req.query and req.query.name then
  name = req.query.name
end

// Build response
response = {
  message = "Hello, {{name}}!",
  timestamp = now(),
  path = req.path
}

res.json(response)

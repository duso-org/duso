print("test 7: calling is_prime in a loop")

is_prime = function(n)
    if n < 2 then
        return false
    end
    i = 2
    while i * i <= n do
        if n % i == 0 then
            return false
        end
        i = i + 1
    end
    return true
end

count = 0
i = 2
while i <= 20 do
    if is_prime(i) then
        count = count + 1
    end
    i = i + 1
end

print("Found " + tostring(count) + " primes up to 20")
